<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/gesture_card_view_top"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="10dp">

                <TextView
                    style="@style/card_title"
                    android:text="@string/enhanced_mode" />

                <TextView
                    style="@style/switch_desc"
                    android:paddingStart="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/row_margin"
                    android:text="@string/enhanced_mode_desc" />
            </LinearLayout>

            <ImageView
                android:id="@+id/enhanced_mode"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/adb_off" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/steps_click_me"
        android:layout_marginTop="2px"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/gesture_card_view_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_question"
            android:contentDescription="@string/faq_click_me" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/steps_click_me" />
    </LinearLayout>

</LinearLayout>
